---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";
import GTMHead from "@components/GTMHead.astro";
import GoogleAnalytics4 from "@components/GoogleAnalytics4.astro";

export interface Props {
  title: string;
}

const canonicalURL = new URL(
  Astro.url.pathname,
  "https://www.referblock.xyz/"
).toString();

const resolvedImageWithDomain = new URL(
  "/UIMock81023.jpg",
  "https://www.referblock.xyz"
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "ReferBlock"
  : "ReferBlock - Infrastructure for Influencer and Affiliate Marketing";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <GoogleAnalytics4 />
    <GTMHead />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/RBLogo2.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="ReferBlock is an Affilaite Marketing Management platform that adds transparency and automation to affiliate management using Blockchain technology."
      canonical={canonicalURL}
      twitter={{
        creator: "@surjithctly",
        site: "@web3templates",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `ReferBlock - Infrastructure for Influencer and Affiliate Marketing`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "ReferBlock Homepage Screenshot",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
